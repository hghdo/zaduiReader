<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:gravity="center_vertical"
   	android:background="@drawable/window_title">
    
	<LinearLayout android:orientation="horizontal"
		android:gravity="center_vertical|center"
		android:layout_alignParentRight="true"
		android:padding="5dip"
   		android:layout_width="50dip"
   		android:layout_height="wrap_content">
		<ImageView 
			android:id="@+id/btn_left_top"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:scaleType="centerInside"
			android:src="@drawable/refresh_btn"/>
	    <ProgressBar
	    	android:id="@+id/pb_download"
	    	android:layout_gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="?android:attr/progressBarStyleSmall"
	        android:visibility="gone" />				
   	</LinearLayout>	 
	<ImageView 
		android:layout_width="wrap_content" 
		android:layout_height="fill_parent" 
		android:scaleType="centerInside"
		android:src="@drawable/window_title_split"/>
   	<TextView
   		android:id="@+id/tv_title"
   		android:gravity="center_vertical|center"
		android:layout_width="wrap_content" 
		android:layout_height="fill_parent" 
		android:textSize="18dip"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:text="@string/app_name"
		android:layout_weight="1"/>	
	<ImageView 
		android:layout_width="wrap_content" 
		android:layout_height="fill_parent" 
		android:scaleType="centerInside"
		android:src="@drawable/window_title_split"/>
	<LinearLayout android:orientation="horizontal"
		android:id="@+id/right_top_coner"
		android:gravity="center_vertical|center"
		android:padding="5dip"
		android:layout_alignParentRight="true"
   		android:layout_width="50dip"
   		android:layout_height="wrap_content">
		<ImageView android:id="@+id/btn_right_top"
			android:layout_width="fill_parent" 
			android:scaleType="centerInside"
			android:layout_height="fill_parent" 
			android:src="@drawable/settings_btn"/>
   	</LinearLayout>
   		  						
</LinearLayout>

